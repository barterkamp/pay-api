# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Tabbed indenting
[*.{json,neon,xlf,sql}]
indent_style = tab

# .htaccess
[{_.htaccess,.htaccess}]
indent_style = tab

# 2 space indenting
[*.{yaml,yml,neon,sql,typoscript,tsconfig,js,ts}]
indent_size = 2

# package.json or .travis.yml or stylelint
[{package.json,.travis.yml,.stylelintrc}]
indent_size = 2

# Max.line length 80
[*.{rst,rst.txt,md}]
max_line_length = 80